{% extends 'base.html.twig' %}

{% set title = 'Admin' %}

{% block body %}
    <main id="admin">
        {{ include('admin/_header.html.twig') }}

        <div class="users">
            <div class="head">
                <h1 class="title">Liste des utilisateurs</h1>
                <a href="{{ path('admin_edit_user') }}"><img class="icon" src="{{ asset('img/icon/add.png') }}" alt="add"></a>
            </div>

            <table>
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Entreprise</th>
                        <th>Créé le</th>
                        <th class="center">Activé</th>
                        <th class="center">Lien Conn.</th>
                        <th class="center">Modif.</th>
                        <th class="center">Suppr.</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.company }}</td>
                            <td>{{ user.createdAt|date('d/m/Y') }}</td>
                            <td class="center"><input type="checkbox" {{ user.activated ? 'checked' : '' }} {{ 'ROLE_ADMIN' in user.roles ? 'disabled' : '' }}></td>
                            <td class="center">
                                <a href="#" onclick="popLink('{{ app.request.getSchemeAndHttpHost ~ '/login?u=' ~ user.email ~ "&p=" ~ user.accessPassword}}')">
                                    <img class="icon" src="{{ asset('img/icon/link.png') }}" alt="copy">
                                </a>
                            </td>
                            <td class="center">
                                <a href="{{ path('admin_edit_user', {id: user.id}) }}"><img class="icon" src="{{ asset('img/icon/edit.png') }}" alt="edit"></a>
                            </td>
                            <td class="center">
                                <a href="{{ 'ROLE_ADMIN' in user.roles ? '#' : path('admin_delete_user', {id: user.id}) }}">
                                    <img class="icon" src="{{ asset('img/icon/trash.png') }}" alt="trash">
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>


        <div class="pop-link">
            <div class="copy">
                <label for="">Lien de connexion :</label>
                <input type="text" name="copy" value="">
            </div>
        </div>
    </main>
{% endblock %}


{% block javascripts %}
    <script>
        {#
            NOTE pop user link
            // TODO fetch new access password
        #}

        let popup = document.querySelector('.pop-link');
        popup.addEventListener('click', closePopLink);

        function popLink(link)
        {
            popup.querySelector('input[name="copy"]').value = link;
            popup.classList.add('active');
        }

        function closePopLink(e)
        {
            if(e.target.classList.contains('active'))
                e.target.classList.remove('active');
        }
    </script>
{% endblock %}
